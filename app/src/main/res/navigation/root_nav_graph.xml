<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.evoteckgeospatialconsult.features.splash.ui.screen.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            app:destination="@id/welcomeFragment" />
        <action
            android:id="@+id/action_splashFragment_to_courseListFragment"
            app:destination="@id/courseListFragment" />
    </fragment>


    <!--    auth_nav_graph-->
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.evoteckgeospatialconsult.features.onboarding.ui.screen.WelcomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_welcome">
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.evoteckgeospatialconsult.features.auth.ui.screens.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
        <action
            android:id="@+id/action_loginFragment_to_courseListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"
            app:destination="@id/courseListFragment" />
    </fragment>
    <fragment
        android:id="@+id/signupFragment"
        android:name="com.evoteckgeospatialconsult.features.auth.ui.screens.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup">
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_signupFragment_to_courseListFragment"
            app:popUpTo="@id/signupFragment"
            app:popUpToInclusive="true"
            app:destination="@id/courseListFragment" />
    </fragment>

    <!--    app_nav_graph-->
    <fragment
        android:id="@+id/courseListFragment"
        android:name="com.evoteckgeospatialconsult.features.courses.ui.screens.CourseListFragment"
        android:label="fragment_course_list"
        tools:layout="@layout/fragment_course_list" >
        <action
            android:id="@+id/action_courseListFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.evoteckgeospatialconsult.features.search.ui.screens.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_classroomFragment"
            app:destination="@id/classroomFragment" />
    </fragment>
    <fragment
        android:id="@+id/classroomFragment"
        android:name="com.evoteckgeospatialconsult.features.classroom.ui.screens.ClassroomFragment"
        android:label="fragment_classroom"
        tools:layout="@layout/fragment_classroom" >
        <action
            android:id="@+id/action_classroomFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.evoteckgeospatialconsult.features.profile.ui.screens.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

</navigation>